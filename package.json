{
  "name": "js-3d-engine",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/electron/electron.js",
  "scripts": {
    "start": "npm run build && electron .",
    "start:dev": "npm run build:dev && electron .",
    "watch": "npm run build:dev && concurrently \"npm run watch\" \"electron .\"",
    "build": "npm run electron && npm run webpack:prod",
    "build:dev": "npm run electron && npm run webpack:dev",
    "electron": "tsc --p tsconfig.json",
    "electron:watch": "tsc --p tsconfig.json -w",
    "webpack:dev": "webpack --mode development",
    "webpack:prod": "webpack --mode production",
    "webpack:watch": "webpack --mode development --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron": "^26.2.3",
    "electron-reload": "^2.0.0-alpha.1",
    "fast-sort": "^3.4.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@webgpu/types": "^0.1.35",
    "concurrently": "^8.2.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}